<%- include('./partials/header.ejs') %>
<main class="form-container">
  <h1 class="form-container-header">Create a New Post</h1>
  <form class="form" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" class="form-control" placeholder="Title" required>
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea name="content" id="content" class="form-control" placeholder="Content" required></textarea>
    </div>
    <button class="form__submit-btn" type="submit">
      Login
    </button>

    <% if (typeof errors !== "undefined"  && errors.length > 0) {%>
    <div class="form__errors-container">
      <ul class="form__errors-list">
        <% errors.forEach((error) => {%>
        <li class="form__errors-list-item"><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>
  </form>
</main>
<%- include('./partials/footer.ejs') %>