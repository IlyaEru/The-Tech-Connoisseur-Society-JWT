<%- include('./partials/header.ejs') %>
<main class="form-container">
  <h1 class="form-container-header">Login</h1>
  <form class="form" method="post">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="username" name="username" id="username" class="form-control" placeholder="Username" required>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
    </div>
    <button class="form__submit-btn" type="submit">
      Login
    </button>
    <p class="form__redirect-text">Don't have an account? <a class="form__redirect-link" href="/signup">Sign Up</a></p>
    <% if (errors) { %>
    <div class="form__errors-container">
      <p class="form__errors-list-item">
        <%= errors %>
      </p>
    </div>
    <% } %>
  </form>
</main>
<%- include('./partials/footer.ejs') %>