<%- include('./partials/header.ejs') %>
<main class="form-container <%= isUserMember ? 'user-is-member' : ''  %>">
  <% if (isUserMember) {%>
  <h1 class="form-container-header">You're a Member!</h1>
  <% } else { %>
  <h1 class="form-container-header">Become a Member</h1>
  <p class="form-container__info-text">To become a member you need to pass the right passcode, the passcode is the answer to: <span class="member-riddle"> What was the name of the first mobile phone?</span></p>
  <form class="form" method="post">
    <div class="form-group">
      <label for="passcode">Passcode</label>
      <input type="text" name="passcode" id="passcode" class="form-control" placeholder="Passcode" required>
    </div>
    <button class="form__submit-btn" type="submit">
      Become a Member!
    </button>
    <% if (typeof errors !== "undefined"  && errors.length > 0) {%>
    <div class="form__errors-container">
      <ul class="form__errors-list">
        <% errors.forEach((error) => {%>
        <li class="form__errors-list-item"><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>
  </form>
  <% } %>
</main>
<%- include('./partials/footer.ejs') %>